
.lightbox {
  display: none;
  position: fixed;
  background-color: #202020;
  z-index: 32010;
  overflow: hidden;
  cursor: pointer;
}

.lightbox.visible {
  visibility: visible;
  min-width: 80px;
  min-height: 80px;
  box-shadow: -8px 8px 48px 16px #000000;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  -o-border-radius: 10px;
  border-radius: 10px;
  -webkit-transition:
    visibility 0s linear 0s,
    left 0.62s ease 0s,
    top 0.62s ease 0s,
    width 0.62s ease 0s,
    height 0.62s ease 0s,
    box-shadow 0.62s ease 0s,
    -webkit-border-radius 0.62s ease 0s;
  -moz-transition:
    visibility 0s linear 0s,
    left 0.62s ease 0s,
    top 0.62s ease 0s,
    width 0.62s ease 0s,
    height 0.62s ease 0s,
    box-shadow 0.62s ease 0s,
    -moz-border-radius 0.62s ease 0s;
  -o-transition:
    visibility 0s linear 0s,
    left 0.62s ease 0s,
    top 0.62s ease 0s,
    width 0.62s ease 0s,
    height 0.62s ease 0s,
    box-shadow 0.62s ease 0s,
    -o-border-radius 0.62s ease 0s;
  transition:
    visibility 0s linear 0s,
    left 0.62s ease 0s,
    top 0.62s ease 0s,
    width 0.62s ease 0s,
    height 0.62s ease 0s,
    box-shadow 0.62s ease 0s,
    border-radius 0.62s ease 0s;
}

.lightbox.hidden {
  visibility: hidden;
  min-width: 0;
  min-height: 0;
  box-shadow: 0 0 0 0 #000000;
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
  border-radius: 0;
  -webkit-transition:
    visibility 0s linear 0.41s,
    left 0.41s ease 0s,
    top 0.41s ease 0s,
    width 0.41s ease 0s,
    height 0.41s ease 0s,
    box-shadow 0.41s ease 0s,
    -webkit-border-radius 0.41s ease 0s;
  -moz-transition:
    visibility 0s linear 0.41s,
    left 0.41s ease 0s,
    top 0.41s ease 0s,
    width 0.41s ease 0s,
    height 0.41s ease 0s,
    box-shadow 0.41s ease 0s,
    -moz-border-radius 0.41s ease 0s;
  -o-transition:
    visibility 0s linear 0.41s,
    left 0.41s ease 0s,
    top 0.41s ease 0s,
    width 0.41s ease 0s,
    height 0.41s ease 0s,
    box-shadow 0.41s ease 0s,
    -o-border-radius 0.41s ease 0s;
  transition:
    visibility 0s linear 0.41s,
    left 0.41s ease 0s,
    top 0.41s ease 0s,
    width 0.41s ease 0s,
    height 0.41s ease 0s,
    box-shadow 0.41s ease 0s,
    border-radius 0.41s ease 0s;
}

.lightbox.fullScreen {
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
  border-radius: 0;
}

.backgroundHaze {
  position: fixed;
  top: 0; left: 0;
  z-index: 32000;
  background-color: #030303;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.backgroundHaze.visible {
  opacity: 0.87;
  visibility: visible;
  -webkit-transition: visibility 0s linear 0s, opacity 0.62s ease 0s;
  -moz-transition: visibility 0s linear 0s, opacity 0.62s ease 0s;
  -o-transition: visibility 0s linear 0s, opacity 0.62s ease 0s;
  transition: visibility 0s linear 0s, opacity 0.62s ease 0s;
}

.backgroundHaze.hidden {
  opacity: 0;
  visibility: hidden;
  -webkit-transition: visibility 0s linear 0.41s, opacity 0.41s ease 0s;
  -moz-transition: visibility 0s linear 0.41s, opacity 0.41s ease 0s;
  -o-transition: visibility 0s linear 0.41s, opacity 0.41s ease 0s;
  transition: visibility 0s linear 0.41s, opacity 0.41s ease 0s;
}

.newMainImage, .newSmallImage, .oldMainImage, .oldSmallImage {
  display: block;
  position: absolute;
  margin: auto;
  top: 0; right: 0; bottom: 0; left: 0;
  background-color: #707070;
  z-index: 32020;
  opacity: 0;
  visibility: hidden;
  box-shadow: -2px 2px 10px 1px #000000;
}

.newMainImage.visible, .newSmallImage.visible, .oldMainImage.visible, .oldSmallImage.visible {
  visibility: visible;
  -webkit-transition: visibility 0s linear 0s, opacity 0.64s ease 0s;
  -moz-transition: visibility 0s linear 0s, opacity 0.64s ease 0s;
  -o-transition: visibility 0s linear 0s, opacity 0.64s ease 0s;
  transition: visibility 0s linear 0s, opacity 0.64s ease 0s;
}

.newMainImage.hidden, .newSmallImage.hidden, .oldMainImage.hidden, .oldSmallImage.hidden {
  opacity: 0;
  visibility: hidden;
  -webkit-transition: visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  -moz-transition: visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  -o-transition: visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  transition: visibility 0s linear 0.63s, opacity 0.63s ease 0s;
}

/* The image while the lightbox is out or is expanding */
.lightbox.visible img.visible,
.lightbox.visible img.visible,
.lightbox.visible img.visible,
.lightbox.visible img.visible {
  -webkit-transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
  -moz-transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
  -o-transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
  transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
}

/* The image while the lightbox is out or is expanding */
.lightbox.visible img.hidden,
.lightbox.visible img.hidden,
.lightbox.visible img.hidden,
.lightbox.visible img.hidden {
  -webkit-transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  -moz-transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  -o-transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  transition: width 0.62s ease 0s, height 0.62s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
}

/* The image while the lightbox is in or is shrinking */
.lightbox.hidden img.visible,
.lightbox.hidden img.visible,
.lightbox.hidden img.visible,
.lightbox.hidden img.visible {
  -webkit-transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
  -moz-transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
  -o-transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
  transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0s, opacity 0.64s ease 0s;
}

/* The image while the lightbox is in or is shrinking */
.lightbox.hidden img.hidden,
.lightbox.hidden img.hidden,
.lightbox.hidden img.hidden,
.lightbox.hidden img.hidden {
  -webkit-transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  -moz-transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  -o-transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
  transition: width 0.41s ease 0s, height 0.41s ease 0s, visibility 0s linear 0.63s, opacity 0.63s ease 0s;
}

.oldMainImage.visible, .newMainImage.visible {
  opacity: 1;
}

.oldSmallImage.visible, .newSmallImage.visible,
.oldSmallImage.hidden, .newSmallImage.hidden {
  opacity: 0.15;
}

